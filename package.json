{
  "name": "anki-server",
  "version": "0.1.0",
  "description": "An MCP for anki",
  "private": true,
  "type": "module",
  "bin": {
    "anki-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
